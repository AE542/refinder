<div class= custom-h1>
  <h1>My Listed Items</h1>
  <%# <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
  <%= link_to "Log out", destroy_user_session_path, class: 'btn btn-primary', data: {turbo_method: :delete} %>
</div>

<%# <div class="row"> %>
<% @items.each do |item| %>
  <div class="col-md-4 my-3 mx-3">
    <div class="card-body card mt-3 shadow p-3">
      <div class="card-body">
        <% if item.status == 0 %>
          <h2 class="card-title text-danger">Lost <%= item.name %></h2>
          <p class="card-text"><strong>Date:</strong> <%= item.date %></p>
          <p class="card-text"><strong>Location:</strong> <%= item.location %></p>
          <p class="card-text"><strong>Reward:</strong> <%= item.reward %></p>
          <p class="card-text"><strong>Description:</strong> <%= item.description %></p>
          <div class="d-flex justify-content-center">
            <%= link_to "Show Matches", item_path(item), class: "btn btn-primary" %>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <%= link_to edit_item_path(item), class: " btn-primary" do %>
              <i class="fa-solid fa-pen-to-square fa-lg"></i>
            <% end %>
            <%= link_to item_path(item), class: " btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
              <i class="fa-solid fa-trash fa-lg"></i>
            <% end %>
          </div>
        <% elsif item.status == 1 %>
          <h2 class="card-title text-success">Found <%= item.name %></h2>
          <p class="card-text"><strong>Date:</strong> <%= item.date %></p>
          <p class="card-text"><strong>Location:</strong> <%= item.location %></p>
          <p class="card-text"><strong>Description:</strong> <%= item.description %></p>
          <div class="d-flex justify-content-center">
            <%= link_to "Show Matches", item_path(item), class: "btn btn-primary" %>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <%= link_to edit_item_path(item), class: " btn-primary" do %>
              <i class="fa-solid fa-pen-to-square fa-lg"></i>
            <% end %>
            <%= link_to item_path(item), class: " btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
              <i class="fa-solid fa-trash fa-lg"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
