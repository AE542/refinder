
<div class="row justify-content-center">
  <div class="col-md-4">
    <div class="card mt-3 shadow">
      <div class="card-body">
        <h2 class="card-title">Edit Item</h2>
        <%= simple_form_for @item do |f| %>
          <div class="form-group mb-2">
            <%= f.input :name, label: "Item Name" %>
          </div>
          <div class="form-group">
            <%= f.label :description, "Description" %>
            <%= f.text_area :description, rows: 3, class: "form-control" %>
          </div>

            <div class="form-group mt-3">
            <%= f.label :date, "Date" %>
            <%= f.date_field :date, class: "form-control", max: Date.current.to_s %>
          </div>

          <div class="form-group" id="image-field" >
            <%= f.input :image, as: :file %>
          </div>

          <div class="text-center">
            <%= f.button :submit, "Submit", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
